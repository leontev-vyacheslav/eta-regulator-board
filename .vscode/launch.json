{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "web-api",
            "consoleTitle": "web-api",
            // "python": "${workspaceFolder}/.venv/bin/python",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "web-api/src/app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0"
            ],
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "web-ui",
            "consoleTitle": "web-ui",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/web-ui/src",
            "userDataDir": "${workspaceRoot}//web-ui/.vscode/chrome",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            },
            "preLaunchTask": "npm: start"
        },
        {
            "name": "tasks-driver",
            "consoleTitle": "tasks-driver",
            "type": "python",
            "request": "launch",
            // "python": "${workspaceRoot}/.venv/bin/python",
            "program": "${workspaceRoot}/tasks-driver/src/app.py",
            "justMyCode": true
        },
    ]
}