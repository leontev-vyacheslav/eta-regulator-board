{
    "version": "0.2.0",
    "configurations": [
            {
            "name": "web-tasks-beat",
            "consoleTitle": "web-tasks-beat",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}/web-api/src",
            "args": [
                "-A",
                "app.celery",
                "beat",
                "-l",
                "info"
            ],
            "justMyCode": false
        },
        {
            "name": "web-tasks-worker",
            "consoleTitle": "web-tasks-worker",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "console": "integratedTerminal",
            "cwd": "${workspaceRoot}/web-api/src",
            "args": [
                "-A",
                "app.celery",
                "worker",
                "-l",
                "info",
                "--concurrency=3",
                "-E"
            ],
            "justMyCode": false
        },
        {
            "name": "web-api",
            "consoleTitle": "web-api",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "web-api/src/app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0"
            ],
            "justMyCode": false,
            "console": "integratedTerminal"
        },
        {
            "name": "web-ui",
            "consoleTitle": "web-ui",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceRoot}/web-ui/src",
            "userDataDir": "${workspaceRoot}//web-ui/.vscode/chrome",
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/*"
            },
            "preLaunchTask": "npm: start"
        },
        // {
        //     "name": "web-ui-run",
        //     "consoleTitle": "web-ui",
        //     "type": "node",
        //     "request": "launch",
        //     "runtimeArgs": [
        //         "run-script",
        //         "start"
        //     ],
        //     "runtimeExecutable": "npm",
        //     "skipFiles": [
        //         "<node_internals>/**"
        //     ],
        //     "cwd": "${workspaceRoot}/web-ui",
        //     "console": "integratedTerminal",
        // },
    ]
}