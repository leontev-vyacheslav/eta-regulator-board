{
   "version": "2.0.0",
   "tasks": [
      {
         "type": "npm",
         "script": "start",
         "path": "web-ui",
         "isBackground": true,
         "problemMatcher": {
            "owner": "custom",
            "pattern": {
               "regexp": "^$"
            },
            "background": {
               "activeOnStart": true,
               "beginsPattern": "Compiling...",
               "endsPattern": "Compiled .*"
            }
         }
      },
      {
         "type": "shell",
         "label": "omega-8f79-to-hosts",
         "command": [
            "echo '192.168.0.100    omega-8f79' | sudo tee -a '/etc/hosts' > /dev/null"
         ],
         "isBackground": true,
         "presentation": {
            "reveal": "silent",
            "revealProblems": "onProblem",
            "close": true
         },
         "problemMatcher": []
      }
   ]
}